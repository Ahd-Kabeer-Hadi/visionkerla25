generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Driver {
  id                   String       @id @default(uuid())
  name                 String
  email                String       @unique
  phoneNumber          String       @unique
  emergencyContact     String
  emergencyContactName String
  address              String
  district             String
  panchayat            String       @unique
  aadhaarCardNumber    String       @unique
  driversLicenseNumber String       @unique
  rcNumber             String       @unique
  tncAccepted Boolean
  status               DriverStatus
  createdAt            DateTime     @default(now())
}

enum DriverStatus {
  REVIEWING
  ACCEPTED
  REJECTED
}
